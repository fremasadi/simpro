<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SIMPRO">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Halaman login -->
        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="false" />

        <!-- Halaman utama admin -->
        <activity
            android:name=".ui.admin.AdminMainActivity"
            android:exported="false" />

        <!-- Halaman utama mandor -->
        <activity
            android:name=".ui.mandor.MandorMainActivity"
            android:exported="false" />

        <activity android:name=".ui.admin.user.UserFormActivity" android:exported="false" />

        <activity
            android:name=".ui.admin.barang.BarangFormActivity"
            android:exported="false"             />
        <activity
            android:name=".ui.admin.kemasan.KemasanFormActivity"
            android:exported="false"/>

        <activity
            android:name=".ui.mandor.produksi.ProdukFormActivity"
            android:exported="false"/>

    </application>

</manifest>